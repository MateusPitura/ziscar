{
  "name": "ziscar",
  "private": true,
  "scripts": {
    "start": "npm run dev:db & npm --prefix frontend run dev & npm --prefix backend run dev",
    "dev": "npm run dev:db && docker-compose up --build -d backend frontend",
    "dev:down": "docker-compose down backend frontend database",
    "dev:db": "docker-compose up --build -d database",
    "dev:down:db": "docker-compose down database",
    "test:db": "docker-compose -f docker-compose.test.yml up --build -d test_database",
    "test:down:db": "docker-compose -f docker-compose.test.yml down test_database",
    "test:load": "./test/load/script.sh",
    "test:down:load": "docker-compose -f docker-compose.test.yml down k6",
    "prod:db": "RESTART_POLICY=always npm run dev:db",
    "prod:down:db": "npm run dev:down:db",
    "prod:backend": "STAGE=production RESTART_POLICY=always docker-compose up --build -d backend",
    "prod:down:backend": "docker-compose down backend",
    "generate:enums": "node scripts/generate-shared-enums.js",
    "generate:enums:force": "node scripts/generate-shared-enums.js --force"
  }
}
