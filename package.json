{
  "name": "ziscar",
  "private": true,
  "scripts": {
    "start": "npm run dev:db & npm --prefix frontend run dev & npm --prefix backend run dev",
    "dev": "docker-compose up --build -d",
    "down": "docker-compose down",
    "dev:db": "docker-compose up --build -d database",
    "dev:db:down": "docker-compose down database",
    "test:db": "docker-compose -f docker-compose.test.yml up --build -d test_database",
    "test:db:down": "docker-compose -f docker-compose.test.yml down test_database",
    "test:load": "./test/load/script.sh",
    "test:load:down": "docker-compose -f docker-compose.test.yml down k6",
    "prod:db": "docker-compose pull database && RESTART_POLICY=always npm run dev:db",
    "prod:db:down": "npm run dev:down:db",
    "prod:backend": "docker-compose pull backend && NODE_ENV=production RESTART_POLICY=always docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d backend",
    "prod:backend:down": "docker-compose down backend",
    "prod:build": "docker-compose build && docker-compose push",
    "generate:enums": "node scripts/generate-shared-enums.js",
    "generate:enums:force": "node scripts/generate-shared-enums.js --force"
  }
}
